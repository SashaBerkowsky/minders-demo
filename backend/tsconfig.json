{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "baseUrl": "./",
    "typeRoots": ["./node_modules/@types", "./src/infrastructure/http/types"],
    "types": ["node"],
    "paths": {
      "@domain": ["src/domain/index"],
      "@application": ["src/application/index"],
      "@infrastructure": ["src/infrastructure/index"],
      "@domain/*": ["src/domain/*"],
      "@application/*": ["src/application/*"],
      "@infrastructure/*": ["src/infrastructure/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
